

<%= form_with(model: @author) do |form| %>
  <% if @author.errors.any? %>
    <% @author.errors.full_messages.each do |messages| %>
     <p><%= messages %></p>
    <% end %>
  <% end %>

  <div class = 'form-group'>
    <%= form.label "Name Author" %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
  </div>
  <br>
  <div class = 'form-group books'>
    <%= form.fields_for :books do |e|%>
      <%= render 'book_fields', f: e%>
    <% end %>
  
  </div>

  
    <%= link_to_add_association "Add Books", form, :books, data: { association_insertion_node: '.books', association_insertion_method: :append }, class: "btn btn-warning" %>
  <br>

        

  <div >
    <%= form.submit 'Submit', class: "btn btn-primary" %>
  </div>

<% end %>
  

<h1>Books Store</h1>
<%= link_to 'New user', new_author_path%>

<table class = 'table'>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>   
      <th scope="col">Quanlitity Books</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

  <tbody >
    <% @authors.each do |e| %>
      <tr>
        <td><%= e.id %></td>
        <td><%= e.name %></td>
        <td><%= e.books_count %></td>
        <td>
          <%= link_to 'Edit', edit_author_path(e) %>
        </td> 
        <td>
          <%= link_to 'Delete', author_path(e), method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody> 

</table> 
<div class = 'nested-fields'>
  <div class = 'row'>
    <div class='col'>
      <%= f.label :name, class: 'mt-3' %>
      <%=  f.text_field :name, class: 'form-control ' %>
    </div>
    <div class='col'>
      <%= f.label :price, class: 'mt-3' %>
      <%= f.number_field :price, class: 'form-control ' %>
    </div>
    <div class='col'>
      <%= f.label :description, class: 'mt-3' %>
      <%= f.rich_text_area :content, class: 'form-control ' %>
    </div>
  </div>
  <%= link_to_remove_association "Delete", f, class:"btn btn-danger mb-2" %>
</div>
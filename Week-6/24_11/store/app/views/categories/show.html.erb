<div class='container'>
  <div class="card" >
    <div class="card-header">
      <h1><%= @category.name %></h1>
    </div>
    <% @category.products.each do |product| %>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <p>
          Name: 
          <%= product.name%>
        </p> 
      </li>
      <li class="list-group-item">
        <p>
          Price: 
          <%= product.price%>
        </p>
      </li> 
      <li class="list-group-item">
        <p>
          Images: 
            <%= image_tag(product.images, width: 100) if product.images.attached? %> 
        </p>
      </li>  
    </ul>
    <% end %>
  </div>
  <div class="d-flex">
    <%= button_to "Edit Category" , edit_category_path, method: :get, class:"btn-success border-0 
    rounded-pill shadow p-2 m-2" %>
    <%= button_to "Delete category", category_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
    <%= button_to "View all category", categories_path,method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
  </div>
</div>